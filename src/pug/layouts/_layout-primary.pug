doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
		title Ground Zero
		//- Favicons and Android NavBar Color
		link(rel='icon', href='img/favicon.ico')
		link(rel='icon', type='image/png', href='img/favicon.png')
		meta(name='theme-color', content='#2ba5e0')
		//- CSS Files
		link(rel='stylesheet', href='assets/stylesheets/fonts.css')
		if productionMode
			link(rel='stylesheet', href='assets/stylesheets/main.min.css')
		else
			link(rel='stylesheet', href='assets/stylesheets/main.css')
		block head
			//- If extra head content is necessary per page, it can be added in index.jade

	body
		include ./includes/_mixins
		.is-hidden
			include ./includes/inline.svg

		include ./general/_menu
		block content
			//- This gets replaced by content in index.jade

		include ./general/_footer
		block footer
			//- If extra footer content is necessary per page, it can be added in index.jade

		if productionMode
			script(src='assets/javascript/main.min.js')
		else
			script(src='assets/javascript/main.js')

		//- If extra scripts are needed replace here
		block scripts
